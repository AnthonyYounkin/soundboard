<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Darth Vader 1"
        android:id="@+id/vader1"
        android:onClick="onSith1Click"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Darth Vader 2"
        android:id="@+id/vader2"
        android:layout_gravity="bottom"
        android:layout_below="@+id/vader1"
        android:layout_alignParentStart="true"
        android:onClick="onSith2Click" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Darth Vader 3"
        android:id="@+id/vader3"
        android:layout_gravity="bottom"
        android:layout_below="@+id/vader2"
        android:layout_alignParentStart="true"
        android:onClick="onSith3Click" />
</LinearLayout>