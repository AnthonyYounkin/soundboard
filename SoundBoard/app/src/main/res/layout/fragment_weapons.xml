            android:id="@+id/Weapons7"
            android:onClick="onWeapons7Click" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weapons8"
            android:id="@+id/Weapons8"
            android:onClick="onWeapons8Click" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weapons9"
            android:id="@+id/Weapons9"
            android:onClick="onWeapons9Click" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weapons10"
            android:id="@+id/Weapons10"
            android:onClick="onWeapons10Click" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weapons11"
            android:id="@+id/Weapons11"
