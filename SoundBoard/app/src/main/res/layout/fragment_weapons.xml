            android:onClick="onWeapons11Click" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weapons12"
            android:id="@+id/Weapons12"
            android:layout_gravity="right"
            android:onClick="onWeapons12Click" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weapons13"
            android:id="@+id/Weapons13"
            android:layout_gravity="right"
            android:onClick="onWeapons13Click" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weapons14"
            android:id="@+id/Weapons14"
            android:layout_gravity="right"
            android:onClick="onWeapons14Click" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weapons15"
            android:id="@+id/Weapons15"
            android:layout_gravity="right"
            android:onClick="onWeapons15Click" />

    </LinearLayout>

</LinearLayout>
